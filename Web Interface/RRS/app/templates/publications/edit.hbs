<header id="currLocation">
	You are here - <a href="/">home</a>-&gt;<a href="/publications">publications</a>-&gt;<a href="/publications/edit/{{model.id}}">edit</a><br>
	<h1>Edit Publication</h1>
</header>
<section id="mainPubEdit">
	{{render "import"}}
	<form role="form">
		<div class="input-group">
			<span  class="input-group-addon" id="basic-addon1">Publication Title </span>
			<input id ="title" type="text" class="form-control" placeholder="Title" aria-describedby="basic-addon1" value="{{model.title}}">
		</div>
		<br>
		<div class="input-group">
			<span class="input-group-addon" id="basic-addon1">Publication URL</span>
			<input id ="website" type="text" class="form-control" placeholder="www.atsomewebsite.com" aria-describedby="basic-addon1">
		</div>
		<br>
		<div class="input-group">
			<span class="input-group-addon" id="basic-addon1">Group</span>
			<input id ="group" type="text" class="form-control" placeholder="alpha" aria-describedby="basic-addon1">
		</div>
		<br>
		<select id="type" class="form-control">
			<option><a href="#">Publication Type</a></option>
			<option><a href="#">Conference</a></option>
			<option><a href="#">Journal</a></option>
			<option><a href="#">Research</a></option>
			<option><a href="#">Tutorial</a></option>
			<option><a href="#">Review</a></option>
			<option><a href="#">Other</a></option>
		</select>

		<br>
		
		<div id="group" class="input-group">
			<div class="checkbox">
				<label><input id="checkbox1" type="checkbox">Is Completed</label>
			</div>
		</div>
		<br>
		<div id="notcomplete">
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">Due Date</span>
				<input id="dueDate" type="text" class="form-control" placeholder="dd/mm/yyyy" aria-describedby="basic-addon1" value="{{model.due}}">
			</div>
			<br>

			<select id="selected" class="form-control">
				<option><a href="#">Lifestyle State</a></option>
				<option><a href="#">inProgress</a></option>
				<option><a href="#">Submitted</a></option>
				<option><a href="#">Accepted</a></option>
				<option><a href="#">InRevision</a></option>
				<option><a href="#">Abandoned</a></option>
			</select>
			<br>
			<br>
			<div class="input-group">
				<span class="input-group-addon" id="basic-addon1">Progress</span>
				<input id="progress1text" type="text" class="form-control" aria-describedby="basic-addon1" value="{{model.progress}}"> <!--Update Progress bar when this changes-->
			</div>
			<div class="progress">
				<div id="progress1" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="value={{model.progress}}" aria-valuemin="0" aria-valuemax="100" style="width:{{model.progress}}%">
					Progress : {{model.progress}}%
				</div>
			</div>
		</div>
		<br>
		<div class="panel panel-default">
			<div class="panel-heading">Collaborators</div>
				<div class="panel-body">
					<section>
						<div class="list-group" id="listUsersOutput"></div>
						<div class="panel-body">
							<div class="form-group">
								<a href="#" class="list-group-item">TEMP COLLABORATOR</a>
							</div>
						</div>

					</section>
				</div>
			<div class="dropdown">
				<button class="btn btn-default dropdown-toggle marginLeft" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
					Add Collaborator <span class="caret"></span>
				</button>
				<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
					<<a href="#" class="list-group-item">TEMP COLLABORATOR</a>
				</ul>
			</div>
			<br>
			</div>
		<br>
		<!-- add seperate handlebars for dropdown -->
		<br>
		<button type="submit" class="btn btn-danger marginBottom" {{action "sendAJAX"}}>Edit Publication</button>
	</form>

</section>
